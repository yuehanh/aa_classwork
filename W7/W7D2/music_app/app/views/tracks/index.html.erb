<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Title</th>
      <th>Ord</th>
      <th>Lytics</th>
      <th>Regular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.album.title %></td>
        <td><%= track.title %></td>
        <td><%= track.ord %></td>
        <td><%= track.lytics %></td>
        <td><%= track.regular %></td>
        <td><%= link_to "Show", track %></td>
        <td><%= link_to "Edit", edit_track_path(track) %></td>
        <td><%= link_to "Destroy", track, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Track", new_album_track_url(1) %>

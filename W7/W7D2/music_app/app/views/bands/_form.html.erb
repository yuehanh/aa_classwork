<% action = band.persisted? ? band_url(band) : bands_url %>
<% method = band.persisted? ? :patch : :post %>
<% submit = band.persisted? ? "Update" : "Create" %>


<%= form_with scope: :band, url: action, method: method, class: "form" do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.submit submit, class: "button" %>
<% end %>
